<h1>Profile</h1>
<div class="row">
	<aside class="span5">
		<h2>
		<%= gravatar_for @user %>
		Name: <%= link_to @user.name, @user %>,
		 <% if admin_user? @user %>
			Admin user
		<% else %>
			<% if current_user? @user %>
				Normal user, <%= link_to "Edit", edit_admin_user_path(@user)%>
			<% else %>
				Normal user
			<% end %>
		<% end %>
		</h2>
	</aside>
</div>