<li>
  <%= gravatar_for user %>
  Name: <%= link_to user.name, user %>,
  <% if admin_user? user %>
      <% if current_user? user %>
        Admin user, <%= link_to "edit", edit_admin_user_path(user)%>
      <% else %>
        Admin user,  Admin user, <%= link_to "edit", edit_admin_user_path(user)%>
        | <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
  <% else %>
      Normal user, <%= link_to "edit", edit_admin_user_path(user)%>
      | <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>